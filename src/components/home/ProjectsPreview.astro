---
import { getCollection, type CollectionEntry } from "astro:content";

const projects = await getCollection("projects");
---

<section class="max-w-6xl mx-auto px-6 py-24">
    <h2 class="text-3xl font-semibold mb-8">Featured Projects</h2>

    <div class="grid md:grid-cols-2 gap-8">
        {projects.slice(0, 2).map(
        (project: CollectionEntry<"projects">) => (
            <a
            href={`/projects/${project.slug}`}
            class="block p-6 border border-zinc-800 rounded-xl hover:border-white transition"
            >
            <h3 class="text-xl font-semibold">{project.data.title}</h3>
            <p class="text-zinc-400 mt-2">{project.data.description}</p>
            </a>
        )
        )}
    </div>
</section>
