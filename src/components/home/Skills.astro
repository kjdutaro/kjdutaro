---
/**
 * Skills â€” grouped skill badges with pixel design.
 * Pixel font group headers, terminal-style icons.
 */
import { Code2, Zap, Settings, Target } from "@lucide/astro";
import SkillBadge from "../ui/SkillBadge.astro";
import profile from "../../data/profile";

const { skills } = profile;

const groups = [
  { icon: Code2, label: "Languages", items: skills.languages },
  { icon: Zap, label: "Frameworks & Libraries", items: skills.frameworks },
  { icon: Settings, label: "Tools & Platforms", items: skills.tools },
  { icon: Target, label: "Specializations", items: skills.specializations },
];
---

<section id="skills" aria-label="Skills" class="c-section">
  <div class="c-container">
    <p class="c-section-eyebrow">Tech Stack</p>
    <h2 class="c-section-title">Skills</h2>
    <p class="c-section-desc">
      Technologies and tools I work with regularly.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-10">
      {
        groups.map(({ icon: Icon, label, items }) => (
          <div class="p-5 border-2 border-[var(--border-default)] bg-[var(--bg-surface)]">
            <h3 class="text-base font-heading font-semibold text-[var(--text-primary)] mb-4 flex items-center gap-2 pb-3 border-b-2 border-[var(--border-default)]">
              <Icon
                size={18}
                class="text-[var(--accent)]"
                aria-hidden="true"
              />
              {label}
            </h3>
            <div class="flex flex-wrap gap-2">
              {items.map((skill) => (
                <SkillBadge name={skill} />
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
