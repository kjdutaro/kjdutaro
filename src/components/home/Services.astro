---
/**
 * Services — grid of service offerings with pixel design.
 * Pixel-border cards, terminal-style icons, data from profile.
 */
import {
  Globe,
  Paintbrush,
  Wrench,
  FileText,
  Languages,
  MapPin,
} from "@lucide/astro";
import profile from "../../data/profile";

const iconMap: Record<string, any> = {
  Globe,
  Paintbrush,
  Wrench,
  FileText,
  Languages,
  MapPin,
};
---

<section id="services" aria-label="Services" class="c-section">
  <div class="c-container">
    <p class="c-section-eyebrow">What I Do</p>
    <h2 class="c-section-title">Services</h2>
    <p class="c-section-desc">
      From building new sites to maintaining existing ones — here's how I can
      help.
    </p>

    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8"
    >
      {
        profile.services.map((service) => {
          const Icon = iconMap[service.icon];
          return (
            <div class="c-card p-5 md:p-6 group">
              <div class="mb-4 w-10 h-10 flex items-center justify-center border-2 border-[var(--accent)] text-[var(--accent)]">
                {Icon && (
                  <Icon
                    size={20}
                    aria-hidden="true"
                  />
                )}
              </div>
              <h3 class="font-heading font-semibold text-lg text-[var(--text-primary)] mb-2 group-hover:text-[var(--accent)] transition-colors">
                {service.title}
              </h3>
              <p class="text-sm text-[var(--text-muted)] leading-relaxed mb-0">
                {service.description}
              </p>
            </div>
          );
        })
      }
    </div>
  </div>
</section>
