---
/**
 * Footer â€” minimal site footer with pixel styling.
 * Pixel font copyright, terminal-inspired links, social icons.
 */
import { Github, Linkedin } from "@lucide/astro";
import profile from "../../data/profile";

---

<footer
  class="shrink-0 bg-[var(--bg-primary)] transition-colors relative"
>
  <!-- Scanline divider -->
  <div class="h-1 relative c-scanlines overflow-hidden" aria-hidden="true">
    <div class="absolute inset-0 bg-[var(--border-default)]"></div>
  </div>

  <div
    class="c-container py-6 flex flex-wrap items-center justify-between gap-4 text-sm"
  >
    <p class="font-heading text-xs text-[var(--text-subtle)] mb-0 tracking-wide">
      &copy; {new Date().getFullYear()}
      <span class="text-[var(--accent)]">{profile.name}</span>
    </p>
    <div class="flex items-center gap-3">
      <a
        href="/#contact"
        class="font-mono text-xs text-[var(--text-muted)] hover:text-[var(--accent)] hover:no-underline transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[var(--focus-ring)] px-2 py-1 border border-transparent hover:border-[var(--border-default)]"
      >
        Contact
      </a>
      <span class="text-[var(--border-default)]" aria-hidden="true">|</span>
      <a
        href={profile.social.github}
        target="_blank"
        rel="noopener noreferrer"
        class="text-[var(--text-muted)] hover:text-[var(--accent)] transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[var(--focus-ring)] p-2.5 min-w-[44px] min-h-[44px] inline-flex items-center justify-center border border-transparent hover:border-[var(--border-default)] hover:shadow-[2px_2px_0_var(--accent)]"
        aria-label="GitHub"
      >
        <Github size={16} aria-hidden="true" />
      </a>
      <a
        href={profile.social.linkedin}
        target="_blank"
        rel="noopener noreferrer"
        class="text-[var(--text-muted)] hover:text-[var(--accent)] transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[var(--focus-ring)] p-2.5 min-w-[44px] min-h-[44px] inline-flex items-center justify-center border border-transparent hover:border-[var(--border-default)] hover:shadow-[2px_2px_0_var(--accent)]"
        aria-label="LinkedIn"
      >
        <Linkedin size={16} aria-hidden="true" />
      </a>
    </div>
  </div>
</footer>
