---
/**
 * Homepage — vertical scroll layout with all primary sections.
 * Section order is optimized for recruiter/client audiences:
 *   Hero > Featured Work > Services > Experience > Skills > Certs > Blog > Contact
 */
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/home/Hero.astro";
import ProjectsPreview from "../components/home/ProjectsPreview.astro";
import Services from "../components/home/Services.astro";
import Experience from "../components/home/Experience.astro";
import Skills from "../components/home/Skills.astro";
import Certifications from "../components/home/Certifications.astro";
import BlogPreview from "../components/home/BlogPreview.astro";
import GetInTouch from "../components/home/GetInTouch.astro";
import profile from "../data/profile";
---

<BaseLayout
  title={`${profile.name} – ${profile.title} | Portfolio`}
  description="Frontend / Web Developer specializing in React, JavaScript, and modern web technologies. Built 30+ touring microsites with map APIs, 6 Chrome extensions. Remote developer based in Philippines available for hire."
  keywords="Kristee Joy Dutaro, frontend developer portfolio, React developer, Chrome extension developer, touring microsites, map API integration, remote developer Philippines, freelance web developer"
>
  <Hero />
  <ProjectsPreview />
  <Services />
  <Experience />
  <Skills />
  <Certifications />
  <BlogPreview />
  <GetInTouch />
</BaseLayout>
