        {allSites.map((site, index) => (
          <li>
            <a
              href={site.url}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-3 p-3 rounded-lg bg-[var(--bg-elevated)] border border-[var(--border-default)] hover:border-[var(--accent)] transition-colors group"
            >
              <span class="font-mono text-xs text-[var(--text-muted)] w-6">
                {index + 1}.
              </span>
              <span class="font-medium text-[var(--text-primary)] group-hover:text-[var(--accent)] transition-colors">
                {site.name}
              </span>
              <span class="text-xs text-[var(--text-muted)] ml-auto">
                {site.location}
              </span>
            </a>
          </li>
        ))}
      </ul>
    </div>
