---
import { getCollection, type CollectionEntry } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

const posts = await getCollection("blog");
---

<BaseLayout title="Blog">
    <section class="max-w-6xl mx-auto px-6 py-20">
        <h1 class="text-4xl font-bold mb-10">Blog</h1>

        <ul class="space-y-6">
        {posts.map((post: CollectionEntry<"blog">) => (
            <li>
            <a
                href={`/blog/${post.slug}`}
                class="block p-6 border border-zinc-800 rounded-xl hover:border-white transition"
            >
                <h2 class="text-xl font-semibold">{post.data.title}</h2>
                <p class="text-zinc-400 mt-2">{post.data.description}</p>
            </a>
            </li>
        ))}
        </ul>
    </section>
</BaseLayout>
