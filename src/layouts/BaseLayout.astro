---

<!DOCTYPE html>
<html lang="en" data-scroll-direction={horizontalScroll ? 'horizontal' : 'vertical'}>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <meta name="description" content={description} />
        <meta name="keywords" content="web developer, full-stack, React, TypeScript, JavaScript, UI/UX design" />
        
        <!-- Canonical URL -->
        <link rel="canonical" href={new URL(canonical, Astro.site)} />
        
        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={new URL(canonical, Astro.site)} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={new URL(ogImage, Astro.site)} />
        
        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={new URL(canonical, Astro.site)} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={new URL(ogImage, Astro.site)} />
        
        <!-- JSON-LD Schema -->
        <script type="application/ld+json" set:html={JSON.stringify(schemaMarkup)} />
        
        <!-- Favicon -->
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        
        <!-- View Transitions for smooth navigation -->
        <ViewTransitions />

        <!-- Theme init script - prevents flash, must run before first paint -->
        <script is:inline>
          (function() {
            var stored = localStorage.getItem("theme");
            var prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
            if (stored === "dark" || (!stored && prefersDark)) {
              document.documentElement.classList.add("dark");
            } else {
              document.documentElement.classList.remove("dark");
            }
          })();
        </script>
    </head>

    <body class={`bg-[var(--bg-primary)] text-[var(--text-primary)] antialiased transition-colors duration-300 flex flex-col overflow-x-hidden ${horizontalScroll ? "h-screen overflow-y-hidden min-h-0" : "min-h-screen"}`}>
        <Header />
        {horizontalScroll ? (
          <main class="flex-1 overflow-x-auto overflow-y-hidden min-h-0 flex" id="main-scroll" data-scroll-direction="horizontal">
            <div class="scroll-track flex flex-row flex-nowrap h-full min-h-0 w-max flex-1">
              <slot />
            </div>
          </main>
        ) : (
          <main class="flex-1 overflow-y-auto overflow-x-hidden min-h-0" id="main-scroll" data-scroll-direction="vertical">
            <slot />
          </main>
        )}
        <Footer />

        <!-- Theme management script -->
        <script type="module">
          import '../scripts/theme.ts';
        </script>
        <!-- Horizontal layout: vertical wheel scrolls the page horizontally -->
        {horizontalScroll && (
          <script is:inline>
            (function() {
              var main = document.getElementById('main-scroll');
              if (!main) return;

              main.addEventListener('wheel', function (e) {
                if (e.ctrlKey || e.metaKey) return;

                var maxScroll = main.scrollWidth - main.clientWidth;
                if (maxScroll <= 0) return;

                if (e.deltaY !== 0) {
                  e.preventDefault();
                  var next = main.scrollLeft + e.deltaY;
                  if (next < 0) next = 0;
                  if (next > maxScroll) next = maxScroll;
                  main.scrollLeft = next;
                }
              }, { passive: false });
            })();
          </script>
        )}
        <!-- Parallax: each section strip moves at a different rate than scroll -->
        {horizontalScroll && (
          <script is:inline>
            (function() {
              var main = document.getElementById('main-scroll');
              if (!main) return;

              var track = main.firstElementChild;
              if (!track) return;

              var raf = null;
              function updateParallax() {
                raf = null;
                var scrollLeft = main.scrollLeft;
                var sections = track.children;
                for (var i = 0; i < sections.length; i++) {
                  var section = sections[i];
                  var strip = section.querySelector('.parallax-strip');
                  if (!strip) continue;
                  var rate = parseFloat(strip.getAttribute('data-parallax-rate')) || 0.12;
                  var sectionLeft = section.offsetLeft;
                  var dx = -(scrollLeft - sectionLeft) * rate;
                  strip.style.transform = 'translateX(' + dx + 'px)';
                }
              }

              function onScroll() {
                if (raf == null) raf = requestAnimationFrame(updateParallax);
              }

              main.addEventListener('scroll', onScroll, { passive: true });
              window.addEventListener('resize', onScroll);
              updateParallax();
            })();
          </script>
        )}
    </body>
</html>
