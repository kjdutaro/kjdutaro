---
import "../styles/global.css";
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
import { ViewTransitions } from 'astro:transitions';

const { 
  title = "Kristee Joy Dutaro â€“ Full-Stack Developer", 
  description = "Full-stack developer specializing in React, TypeScript, and modern web technologies.",
  ogImage = "/og-image.png",
  canonical = Astro.url.pathname,
  horizontalScroll = true
} = Astro.props;

// JSON-LD Schema for Person/Portfolio
const schemaMarkup = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Kristee Joy Dutaro",
  "url": "https://kjdutaro.xyz",
  "jobTitle": "Web Developer",
